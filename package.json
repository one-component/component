{
  "name": "@one-component/component",
  "version": "0.0.0",
  "scripts": {
    "docs:start": "dumi dev",
    "docs:build": "NODE_ENV=production dumi build",
    "docs:deploy": "npm run docs:build && gh-pages -d docs-dist",
    "build": "NODE_ENV=production father-build",
    "dev": "father-build --watch",
    "deploy": "npm run docs:deploy",
    "release": "npm run build && npm publish",
    "prettier": "prettier --write \"**/*.{js,jsx,tsx,ts,less,md,json}\"",
    "test": "umi-test",
    "test:coverage": "umi-test --coverage",
    "commit": "lint-staged && export HUSKY_SKIP_HOOKS=1 && git-cz"
  },
  "main": "lib/index.js",
  "module": "es/index.js",
  "source": "src/index.ts",
  "sideEffects": [
    "*.less",
    "*.css"
  ],
  "files": [
    "lib",
    "es",
    "src"
  ],
  "gitHooks": {
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.{js,jsx,less,md,json}": [
      "prettier --write"
    ],
    "*.ts?(x)": [
      "prettier --parser=typescript --write"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
    }
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ]
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "peerDependencies": {
    "react": "^17.0.1"
  },
  "devDependencies": {
    "@one-style/commit": "^0.1.1",
    "@one-style/eslint": "^0.1.1",
    "@one-style/prettier": "^0.1.1",
    "@umijs/test": "^3.0.5",
    "dumi": "^1.1.7",
    "dumi-theme-mobile": "^1.0.7",
    "father-build": "^1.19.2",
    "gh-pages": "^3.1.0",
    "react": "^17.0.1"
  }
}
